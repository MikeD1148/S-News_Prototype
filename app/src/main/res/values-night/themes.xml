<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme_SNewsPrototype2" parent="Theme.MaterialComponents.DayNight.DarkActionBar">

        <!-- Default Background Colour -->
        <item name="colorPrimary">@color/grey</item>
        <!-- Default Text Colour -->
        <item name="android:textColorPrimary">@color/grey</item>
        <!-- Top Bar Accent Colour -->
        <item name="colorPrimaryVariant">@color/teal</item>
        <!-- Default Colour for Objects on top of Default Background -->
        <item name="colorOnPrimary">@color/grey</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal</item>
        <item name="colorSecondaryVariant">@color/teal</item>
        <item name="colorOnSecondary">@color/teal</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Overflow icon -->
        <item name="actionOverflowButtonStyle">@style/CustomOverflowButton</item>
    </style>

    <!-- Define Overflow Button -->
    <style name="CustomOverflowButton" parent="@style/Widget.AppCompat.Light.ActionButton.Overflow">
        <item name="android:src">@drawable/settings_icon</item>
    </style>

    <!-- Text Colour -->
    <style name="TEXT">
        <item name = "android:textColor">@color/white</item>
    </style>

    <!-- Background Colour -->
    <style name="BACKGROUND">
        <item name = "android:background">@color/light_black</item>
    </style>

    <!-- Options Menu Colour -->
    <style name="MENU">
        <item name = "android:background">@color/orange</item>
    </style>

</resources>